<?xml version="1.0" encoding="utf-8"?>
<!-- Fichier : res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Définit le thème sombre de l'application avec Material3 -->
    <style name="Theme.MyApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Couleurs principales pour Material3 -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Couleurs de la barre de statut et de navigation -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>
</resources>


